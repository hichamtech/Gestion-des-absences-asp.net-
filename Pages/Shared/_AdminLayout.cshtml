            });
            function openAddEditForm() {
                if (selectedEvent != null) {
                    $('#hdEventID').val(selectedEvent.eventID);
                    $('#SeanceCreate_libele_seance').val(selectedEvent.title);
                    $('#SeanceCreate_date_debut').val(selectedEvent.start.format('DD/MM/YYYY HH:mm A'));
