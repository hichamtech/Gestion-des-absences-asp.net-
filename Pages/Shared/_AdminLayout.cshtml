                    $('#chkIsFullDay').change();
                    $('#SeanceCreate_date_fin').val(selectedEvent.end != null ? selectedEvent.end.format('DD/MM/YYYY HH:mm A') : '');
                    $('#SeanceCreate_Matierecode_matiere').val(selectedEvent.code_matiere);
                    $('#SeanceCreate_Sallecode_salle').val(selectedEvent.code_salle);
                }
                $('#myModal').modal('hide');
                $('#myModalSave').modal();
